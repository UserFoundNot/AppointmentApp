@model AppointmentApp.Core.Entities.Appointment
@{
    ViewData["Title"] = "Randevuyu Sil";
}

<h2>@ViewData["Title"]</h2>
<p><strong>Kullanıcı:</strong> @ViewData["UserEmail"]</p>
<p><strong>Başlık:</strong> @Model.Title</p>
<p><strong>Tarih:</strong> @Model.Date.ToString("g")</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
